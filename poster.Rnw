mylegend <- g_legend(p1 + theme(legend.direction="horizontal")) 

grid.arrange(p1 + guides(fill = FALSE, size = FALSE),
             p3 + guides(fill = FALSE, size = FALSE),
             mylegend,
             nrow = 3, heights=c(10, 10, 1))
